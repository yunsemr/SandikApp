<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPage">

    <Button
        android:id="@+id/goVoter"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="Results"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/goClerk"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/elections"
        app:layout_constraintTop_toBottomOf="@+id/elections" />

    <Button
        android:id="@+id/goClerk"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:text="ADMINISTRATION"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/elections"
        app:layout_constraintStart_toEndOf="@+id/elections"
        app:layout_constraintStart_toStartOf="@+id/elections"
        app:layout_constraintTop_toBottomOf="@+id/goVoter" />

    <TextView
        android:id="@+id/elections"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:background="#F44336"
        android:text="2023 TURKEY ELECTIONS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>



